{
  "compilerOptions": {
    "baseUrl": "./",
    "sourceMap": true,
    "strictNullChecks": false,
    "module": "ES2015",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "lib": ["dom", "es5", "es2015"],
    "types": ["node"],
    "paths": {
      "jquery": ["jquery/dist/jquery.js"]
    }
  },
  "include": ["./*.ts"],
  "exclude": ["./*.d.ts"]
}